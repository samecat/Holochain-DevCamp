{
  "name": "@holochain/hackmode",
  "version": "0.0.1",
  "description": "just need to get an mvp running",
  "main": "lib/index.js",
  "scripts": {
    "lint": "standard --fix 'lib/**/*.js' 'bin/**/*.js'",
    "mocha": "mocha lib/**/*.test.js bin/**/*.test.js",
    "nyc": "nyc npm run mocha",
    "test": "npm run lint && npm run nyc",
    "show-coverage": "node -e \"require('opn')('coverage/lcov-report/index.html')\""
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "opn": "^5.4.0",
    "sinon": "^7.1.1",
    "standard": "^12.0.1"
  },
  "dependencies": {
    "@holochain/hc-dpki": "^0.0.1",
    "@holochain/mosodium": "^0.0.1",
    "@holochain/n3h-common": "^0.0.1",
    "@holochain/n3h-ipc": "^0.0.1",
    "@holochain/n3h-mod-connection-wss": "0.0.1",
    "@holochain/n3h-mod-dht-fullsync": "0.0.1",
    "@holochain/n3h-mod-message-libp2p": "^0.0.1",
    "@holochain/n3h-mod-spec": "0.0.1",
    "@holochain/tweetlog": "^0.0.1",
    "@nodeutils/defaults-deep": "^1.1.0",
    "bs58": "^4.0.1",
    "libp2p": "^0.23.1",
    "libp2p-kad-dht": "^0.10.5",
    "libp2p-mplex": "^0.8.2",
    "libp2p-tcp": "^0.13.0",
    "msgpack-lite": "^0.1.26",
    "peer-id": "^0.11.0",
    "peer-info": "^0.14.1",
    "pull-stream": "^3.6.9",
    "zeromq": "^5.1.0"
  },
  "standard": {
    "env": {
      "mocha": true
    }
  },
  "nyc": {
    "check-coverage": false,
    "per-file": false,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "all": true,
    "include": [
      "./lib/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  }
}
